<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PEDALCITYAPP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryVariant">#575757</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#101010</item>
        <item name="colorSecondaryVariant">#575757</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#ccc8c8</item>
        <!-- Customize your theme here. -->

        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetStyle</item>

    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
    </style>

    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet</item>
    </style>

</resources>