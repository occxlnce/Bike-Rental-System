<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <!--     MTB Bicycle Card Info      -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/triban"
        android:layout_width="230dp"
        android:layout_height="280dp"
        android:layout_marginHorizontal="10dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/active2"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/active2"
        app:strokeWidth="1.5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/button_radius"
            android:backgroundTint="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tribanlogo" />

        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:letterSpacing="0.03"
                android:text="RC100"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/bicycle_type"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/inter_bold"
            android:letterSpacing="0.03"
            android:text="Road Bike"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/flip_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/baseline_360_rotate_24"
            android:backgroundTint="@color/white"
            tools:ignore="DuplicateIds" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp">

            <ImageView
                android:id="@+id/gear_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/gear" />

            <TextView
                android:id="@+id/gear_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/gear_icon"
                android:fontFamily="@font/inter_semibold"
                android:letterSpacing="0.03"
                android:text="7 Speed Gears"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/brake_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/gear_icon"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/rim_brake"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gear_icon"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/brake_icon"
                android:fontFamily="@font/inter_semibold"
                android:letterSpacing="0.03"
                android:text="Dual Pivot Caliper"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/handlebar_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/brake_icon"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/handlebar"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/brake_icon"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/handlebar_icon"
                android:fontFamily="@font/inter_semibold"
                android:letterSpacing="0.03"
                android:text="Drop Handlebar"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/weight_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/handlebar_icon"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/weight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/handlebar_icon"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/weight_icon"
                android:fontFamily="@font/inter_semibold"
                android:letterSpacing="0.03"
                android:text="11 Kgs"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/frame_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/weight_icon"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/frame" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weight_icon"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/frame_icon"
                android:fontFamily="@font/inter_semibold"
                android:letterSpacing="0.03"
                android:text="Light Aluminuim"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:src="@drawable/link_icon"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:shadowColor="@color/very_light_blue"
                android:shadowRadius="3"
                android:autoLink="web"
                android:linksClickable="true"
                android:text="www.decathlon.in"
                android:textColorLink="@color/white"
                android:textSize="12dp"
                android:letterSpacing="0.03"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



    <!--     Electric Bicycle Card Info      -->
